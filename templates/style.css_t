{# vim: set ft=css: #}

{% set base_font_size = 16 %}
{% macro rem(prop, rem) %}
  {{ prop }}: {{ (base_font_size * rem)|round|int }}px;
  {{ prop }}: {{ rem }}rem;
{% endmacro %}

@import url(//fonts.googleapis.com/css?family=
  {{- font_family|default('Roboto Slab')|replace(' ', '+') -}}
  :
  {{- font_weights|default([400, 700])|join(',') -}}
);

* {
  margin: 0;
  padding: 0;
  border: none;
  font-size: 1em;
  line-height: 1.6;
  clear: left;
}

html {
  font-size: {{ base_font_size }}px;
}

body {
  position: relative;
  margin: 3em 10%;
  {{ rem('max-width', 50) }}
  font-family: "{{ font_family|default('Roboto Slab') }}", serif;
  font-weight: 400;
  color: {{ text_color }};
  background: {{ background_color }};
  white-space: normal;
  transition: margin 0.2s;
  -webkit-font-smoothing: antialiased;
}

header {
  {{ rem('margin-bottom', 1) }};
  line-height: 1;
}

footer {
  {{ rem('margin-top', 2) }};
}

footer p {
  font-size: 0.8em;
  color: {{ copyright_color }};
}

h1, h2, h3, h4, h5, h6, p, ul, ol, dl, hr {
  {{ rem('margin-bottom', 1) }};
}

h1 {
  font-weight: 700;
  font-size: 2em;
  color: {{ title_color or text_color }};
}

h2 {
  font-weight: {{ 700 if title_color == text_color else 400 }};
  font-size: 1.25em;
  color: {{ title_color }};
}

h1:target, h2:target, h3:target, h4:target, h5:target, h6:target {
  text-decoration: underline;
}

a:link, a:visited {
  text-decoration: none;
}

a:link {
  color: {{ link_color }};
}

a:visited {
  color: {{ vlink_color or link_color }};
}

a:hover {
  text-decoration: underline;
}

ul li {
  position: relative;
  list-style: none;
  {{ rem('padding-left', 0.8) }}
}

ul li:before {
  position: absolute;
  left: 0;
  /* bullet: http://www.fileformat.info/info/unicode/char/2022/index.htm */
  content: '\2022';
  color: {{ copyright_color }};
}

/* ie7 can't handle :before pseudo-element */
*:first-child+html ul li {
  list-style: disc;
  margin-left: 0.8em;
  padding-left: 0;
}

dt {
  {{ rem('margin-top', 1) }}
}

dd {
  {{ rem('margin-left', 0.8) }}
}

dd.attr, dd.note {
  margin-left: 0;
}

dd, dd p, dd ul, dd ol, dd dl, dd hr {
  {{ rem('margin-top', 1) }}
  margin-bottom: 0;
}

dd.note {
  margin-top: 0;
  {{ rem('font-size', 0.8) }}
  font-style: italic;
}

dt.label {
  {{ rem('margin-bottom', -1) }}
  {{ rem('font-size', 0.8) }}
  color: {{ copyright_color }};
  line-height: 1;
}

dt.label + dt {
  {{ rem('margin-top', 1) }}
}

dl.attrs dt.label {
  {{ rem('margin-top', 1) }}
}

hr {
  {{ rem('margin-top', 1.5) }};
  {{ rem('height', 0.1) }}
  background-color: {{ rgba(copyright_color, 0.1) }};
}

sup, sub {
  {{ rem('font-size', 0.5) }}
}

abbr, acronym {
  cursor: help;
}

/* emblem */

.emblem {
  position: relative;
  width: 90px;
  height: 90px;
  margin: -3px;
}

.emblem div {
  width: 24px;
  height: 84px;
  margin: 3px;
  float: left;
  clear: none;
}

.emblem i {
  display: block;
  height: 39px;
}

.emblem .emblem-bottom {
  margin-top: 6px;
}

{% for h in ['left', 'middle', 'right'] %}
  .emblem-{{ h }} .emblem-top {
    background: {{ emblem_colors[loop.index] }};
  }
  .emblem-{{ h }} .emblem-bottom {
    background: {{ emblem_colors[loop.index + 3] }};
  }
  {% if emblem_shape is not splitted_trigram_bar loop.index0  %}
    .emblem-{{ h }} .emblem-top {
      height: 84px;
    }
    .emblem-{{ h }} .emblem-bottom {
      display: none;
    }
  {% endif %}
{% endfor %}

/* profile */

.profile {
  white-space: nowrap;
  {{ rem('max-width', 35) }}
}

.profile main {
  font-size: 1.1em;
}

.profile header {
  {{ rem('margin-bottom', 2) }};
}

.profile h1 {
  display: none;
}

.profile h2 {
  margin-bottom: 0;
  font-size: 1em;
}

/* error */

.error h1 {
  color: {{ link_color }};
}

.error footer {
  margin-top: 0;
}

/* themes */

.themes a.selected {
  color: {{ background_color }};
  background: {{ link_color }};
  padding: 0 0.5em;
}

/* resume */

.resume .emblem-wrap {
  position: absolute;
  right: 0;
  margin: 0.25em;
  overflow: hidden;
}

.resume h1 {
  {{ rem('margin-right', 1.5) }}
  padding-right: 96px;
  white-space: nowrap;
}

/* responsive layout */

@media screen and (max-width: 50rem) {
  body {
    margin: 3em 5%;
  }
}

@media screen and (max-width: 480px) {
  body {
    margin: 2em 2%;
    width: auto;
  }

  .profile {
    white-space: normal;
  }

  .profile main {
    font-size: 1em;
  }

  .hard-returns br {
    display: none;
  }

  .resume {
    margin-top: 1em;
  }

  .resume .emblem-wrap {
    width: 45px;
  }

  .resume .emblem {
    zoom: 0.5;
    margin: 0;
  }

  .resume h1 {
    padding-right: 48px;
  }
}

